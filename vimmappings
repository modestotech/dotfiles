let mapleader = ","

" Leader commands
" Toggle scrollbind
nnoremap <leader>b :set scrollbind!<CR> :set scrollbind?<CR>
nnoremap <leader>c :set cursorbind!<CR> :set cursorbind?<CR>

" Toggle spell check
nnoremap <leader>s :setlocal spell!<CR> :setlocal spell?<CR>

" Clear search
map <leader><space> :let @/=''<cr> 

" Formatting
map <leader>q gqip

" Toggle tabs and EOL
map <leader>l :set list!<CR> 

" Show dir tree structure
map <leader>t :!tree $(pwd) -I node_modules \| less <CR>

" Trim whitespace, from http://vim.wikia.com/wiki/Remove_unwanted_spaces
nnoremap <silent> <leader>w :let _s=@/ <Bar> :%s/\s\+$//e <Bar> :let @/=_s <Bar> :nohl <Bar> :unlet _s <CR>

" Mapping for following tags in help files 
au filetype help :nnoremap <buffer><CR> <c-]>
au filetype help :nnoremap <buffer><BS> <c-T>

" Pane resizing
noremap <C-w><Up> :resize +5<CR>
noremap <C-w><Down> :resize -5<CR>
noremap <C-w><Left> :vertical:resize -5<CR>
noremap <C-w><Right> :vertical:resize +5<CR>

" Opens file under cursor in new vertical split
nnoremap gf :vertical wincmd f<CR>

" Delete forward
inoremap <C-d> <Del>

" Toggle explorer
map <F2> :call ToggleNetrw()<CR>

" Mapping the vim-unimpaired commands
nmap ö [
nmap ä ]
omap ö [
omap ä ]
xmap ö [
xmap ä ] 

" Closing brackets automagically
inoremap { {}<left>
inoremap {{ {
inoremap {} {}
inoremap [ []<left>
inoremap [[ [
inoremap [] []
inoremap ( ()<left>
inoremap (( (
inoremap () ()
inoremap " ""<left>
inoremap "" ""
inoremap ' ''<left>
inoremap '' ''
inoremap ''' '
inoremap {<CR> {<CR>}<ESC>O
inoremap {;<CR> {<CR>};<ESC>O

" Don't use arrows!
nnoremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>
inoremap <Up>  <Nop>
inoremap <Down> <Nop>
inoremap <Left> <Nop>
inoremap <Right> <Nop>
