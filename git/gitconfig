[user]
	name = modestotech
	email = modestotechnology@gmail.com

[include]
	path = ~/.gitconfig.local

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = red

[merge]
	conflictStyle = diff3

[push]
	default = simple

[pull]
	ff = only

[rebase]
	updateRefs = true
	autosquash = true

[core]
	autocrlf = input
	eol = lf
	commentChar = "@"

[fetch]
	prune = true

[alias]
	aa = add .
	ca = commit --amend
	can = commit --amend --no-edit
	co = checkout
	cod = checkout develop
	bad = branch -a --merged
	d = branch -d
	D = branch -D
	fodd = fetch origin develop:develop
	p = pull
	pfwl = push --force-with-lease
	rpo = remote prune origin
	reb = "!sh -c 'git fetch --prune > /dev/null 2>&1 && git branch -vv | findstr \": gone]\" | awk \"{print \\$1}\"'"
	rec = rebase --continue
	red = rebase develop
	rid = rebase -i develop
	s = status
