[user]
	name = modestotech
	email = modestotechnology@gmail.com

[include]
	path = ~/.gitconfig.local

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = red

[pull]
	rebase = true

[core]
	autocrlf = input
	eol = lf
	commentChar = "@"

[fetch]
	prune = false

[safe]
	directory = *

[alias]
	aa = add .
	fodd = fetch origin develop:develop
	ca = commit --amend
	can = commit --amend --no-edit
	co = checkout
	cod = checkout develop
	p = pull
	pfwl = push --force-with-lease
	reb = "!sh -c 'git fetch --prune > /dev/null 2>&1 && git branch -vv | findstr \": gone]\" | awk \"{print \\$1}\"'"
	rec = rebase --continue
	red = rebase develop
	rid = rebase -i develop
	s = status
